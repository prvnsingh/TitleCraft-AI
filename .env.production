# Production Environment Variables Template
# Copy this to .env and fill in your actual values

# Environment
ENVIRONMENT=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_DEBUG=false

# Database
DATABASE_URL=postgresql://titlecraft:your_db_password@localhost:5432/titlecraft
DB_PASSWORD=your_secure_db_password

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GROQ_API_KEY=your_groq_api_key
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Monitoring
GRAFANA_PASSWORD=your_grafana_password
PROMETHEUS_ENABLED=true

# Security
SECRET_KEY=your_secret_key_for_jwt_and_encryption
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/titlecraft.log
ACCESS_LOG_FILE=logs/access.log
ERROR_LOG_FILE=logs/error.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_PREMIUM=1000

# Performance
CACHE_TTL_DEFAULT=3600
CACHE_TTL_CHANNEL_PROFILE=86400
CACHE_TTL_EMBEDDINGS=604800

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# SSL (for production with reverse proxy)
SSL_CERT_PATH=/etc/ssl/certs/titlecraft.crt
SSL_KEY_PATH=/etc/ssl/private/titlecraft.key
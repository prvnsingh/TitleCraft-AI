# TitleCraft AI - Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (Optional - for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LangSmith Configuration (Optional - for LLM tracing and monitoring)
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=TitleCraft-AI
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Ollama Configuration (Optional - for local LLM inference)
OLLAMA_BASE_URL=http://localhost:11434

# LLM Service Configuration
LLM_DEBUG=false
LLM_STREAMING=true
LLM_CACHE=false
LLM_RETRY=true
LLM_TIMEOUT=120

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG_MODE=False

# Development Settings
ENVIRONMENT=development